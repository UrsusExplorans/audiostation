ARG FROMIMAGE
FROM $FROMIMAGE

RUN apt-get install apt-transport-https ca-certificates
RUN echo "deb http://www.lesbonscomptes.com/upmpdcli/downloads/raspbian/ stretch main" > /etc/apt/sources.list.d/upmpdcli.list
RUN echo "deb-src http://www.lesbonscomptes.com/upmpdcli/downloads/raspbian/ stretch main" >> /etc/apt/sources.list.d/upmpdcli.list

RUN apt-get update
RUN apt-get install upmpdcli -y --force-yes
COPY upmpdcli.conf /etc/upmpdcli.conf

EXPOSE 1900/udp
EXPOSE 49152

ENTRYPOINT ["upmpdcli"]
